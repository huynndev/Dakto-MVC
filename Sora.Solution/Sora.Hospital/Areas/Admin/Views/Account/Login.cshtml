@{
    ViewBag.Title = "Đăng Nhập Miracle Web Admin";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";

}
<div class="limiter ">
    <div class="container-login100">
        <div class="wrap-login100 be-login-admin">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/Content/login/images/img-01.png" alt="IMG">
            </div>

            <form class="login100-form validate-form">
                <span class="login100-form-title">
                    Member Login
                </span>

                <div class="wrap-input100 validate-input" data-validate="Username can not empty">
                    <input class="input100" type="text" placeholder="Tên đăng nhập" name="UserName">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" type="password" placeholder="Mật khẩu" name="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn btn-login-admin">
                        Login
                    </button>
                </div>
                <div class="mes-error" style="display:none">Bạn đã nhập sai tên đăng nhập hoặc mật khẩu</div>
                <div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="@Url.Action("ForgotPassView", "ForgotPass")">
                        Username / Password?
                    </a>
                </div>
                <div class="text-center p-t-136">
                    <a class="txt2" href="//@TempData["websiteURL"]">
                        Trở lại trang web.
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var returnUrl = "@TempData["ReturnUrl"]";
</script>
@Scripts.Render("~/Content/ManagerJSCommon1")
<script src="~/Content/assets/js/jsCheckInput.js"></script>


