@using Sora.Common.CommonObjects
@using Sora.Common.Constants
@using Sora.Common.Extensions
@using Sora.Common.Enums
@using Sora.Services.ViewModels
@model Sora.Services.ViewModels.AppointmentViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutSimpleAdmin.cshtml";
    //var types = (List<DocumentTypeViewModel>)ViewData["Types"];
    var isSuccess = ViewBag.Success;
    var Message = ViewBag.Message;
}
@section css{
    <link href="~/Content/assets/css/select2.min.css" rel="stylesheet" />
    <style>
        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: #01a9ac !important;
            border: 1px solid #01a9ac !important;
            padding: 5px 15px !important;
        }

        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            background-color: #01a9ac !important;
        }

        .box-img-avatar {
            position: relative;
            overflow: hidden;
            width: 230px;
            height: 270px;
            max-width: 100%;
            max-height: 100%;
            margin-bottom: -15px;
            border: 1px solid #bfbfbf;
        }

        .img-avatar {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .lable-input {
            position: absolute;
            background: #0000004f;
            width: 100%;
            left: 0;
            bottom: 0;
            margin-bottom: 0;
            height: 30%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #00ffe1;
            cursor: pointer;
        }

        #lb-input-file {
            height: 35px;
            margin-bottom: 0;
            padding: 8px 15px;
        }
    </style>
}
<!-- Page-header start -->
<div class="page-header horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Cập nhập trạng thái cho thông tin đăng ký khám bệnh</h4>
                    <span>Sửa thông tin</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="~/Admin">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Doctors")">Đăng ký khám bệnh</a>

                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Cập nhập</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Zero config.table start -->
            @using (Html.BeginForm("UpdateStatus", "Appointments", FormMethod.Post, new { @id = "formData", @class = "form-validate form-page", enctype = "multipart/form-data" }))
            {
                <div class="card">
                    <div class="card-header">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#category1" role="tab">Tiếng Việt</a>
                                <div class="slide"></div>
                            </li>
                        </ul>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="feather icon-maximize full-card"></i></li>
                                <li><i class="feather minimize-card icon-minus"></i></li>
                            </ul>
                        </div>
                    </div>

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="card-block">
                        <div class="row">
                            <div class="col-lg-12 ">
                                <!-- Tab panes -->
                                <div class="tab-content card-block">
                                    <div class="tab-pane active" id="category1" role="tabpanel">
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Họ</label>
                                                    <label class="form-control">@Model.LastName</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Tên</label>
                                                    <label class="form-control">@Model.FirstName</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Giới tính</label>
                                                    <label class="form-control">@(Model.Gender == Gender.Male.ToString() ? "Nam" : "Nữ")</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Ngày sinh</label>
                                                    <label class="form-control">@string.Format("{0:dd/MM/yyyy}", Model.DayOfBirth)</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <label class="form-control">@Model.Email</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Số điện thoại</label>
                                                    <label class="form-control">@Model.Phone</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Ngày hẹn 1</label>
                                                    <label class="form-control">@string.Format("{0:dd/MM/yyyy hh.tt}", Model.FirstDay)</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Ngày hẹn 2</label>
                                                    <label class="form-control">@string.Format("{0:dd/MM/yyyy hh.tt}", Model.SecondDay)</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Chuyên khoa</label>
                                                    <label class="form-control">@(Model.Specialist?.MESpecialistName) &nbsp;</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Vấn đề</label>
                                                    <label class="form-control">@Model.Description  &nbsp;</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Trạng thái</label>
                                                    <div>
                                                        <input type="radio" id="status-new" name="status" value="@(AppointmentStatus.New.ToString())" @(Model.Status == AppointmentStatus.New.ToString() ? "checked" : "") /> 
                                                        <label for="status-new" class="mr-5">Mới</label>
                                                        <input type="radio" id="status-Processed" name="status" value="@(AppointmentStatus.Processed.ToString())" @(Model.Status == AppointmentStatus.Processed.ToString() ? "checked" : "") /> 
                                                        <label for="status-Processed">Đã xử lý</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-12 align-center">
                                <div class="form-group" style="margin: auto;padding: 13px;">
                                    <span style="float:right">
                                        <button type="submit" class="btn btn-space btn-primary ">Lưu</button>
                                        @Html.ActionLink("Trở lại", "Index", "Appointments", new { @class = "btn btn-space btn-default" })
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- Zero config.table end -->
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
    <script src="~/Content/ckeditor/adapters/jquery.js"></script>
    <script type="text/javascript" src="~/Content/ckfinder/ckfinder.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2.full.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2-custom.js"></script>
    @if (isSuccess != null)
    {
        if (isSuccess)
        {
            <script>
                toastr.success('@Message', 'Thành công');
            </script>
        }
        else
        {
            <script>
                toastr.error('@Message', 'Thất bại',{timeOut: 8000});
            </script>
        }
    }
    <script type="text/javascript">
        $(function () {
            var $form = $("#formData");
            $(".editor")
                .ckeditor();

            //CKFinder.setupCKEditor(null, "/Uploads");
        });

        function SetImagePreview(input, picId) {
            if (input.files && input.files[0]) {
                var name = input.files[0].name;
                $('.show-file-name').html(name);
            }
        }
    </script>
}

