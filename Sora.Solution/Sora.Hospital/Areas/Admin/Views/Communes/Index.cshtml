@using Sora.Services.ViewModels
@using Sora.Common.CommonObjects
@using Sora.Common.Extensions
@using Sora.Common.Constants
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSimpleAdmin.cshtml";
    var result = (PagedResult<CommuneViewModel>)Model;
    int counter = 1;
    var isSuccess = ViewBag.Success;
    var Message = ViewBag.Message;
}
@section css{
    <link href="~/Content/assets/css/select2.min.css" rel="stylesheet" />
    <style>
        .box-img-avatar {
            position: relative;
            overflow: hidden;
            width: 230px;
            height: 270px;
            max-width: 100%;
            max-height: 100%;
            margin-bottom: -15px;
            border: 1px solid #bfbfbf;
        }

        .img-avatar {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .lable-input {
            position: absolute;
            background: #0000004f;
            width: 100%;
            left: 0;
            bottom: 0;
            margin-bottom: 0;
            height: 30%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #00ffe1;
            cursor: pointer;
        }

        .input-search {
            width: 320px;
        }
    </style>
}
<!-- Page-header start -->
<div class="page-header horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Quản lý tuyến xã</h4>
                    <span>Danh sách tuyến xã. Bạn có thể sửa, thêm mới và xóa</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="~/Admin">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Commune")">Tuyến xã</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Danh sách</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-header end -->
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Zero config.table start -->
            <div class="card">
                <div class="card-header">
                    <div class="card-header row contact-header">
                        <h5 class="mt-2">Danh sách tuyến xã</h5>
                        <a href="@Url.Action("Create", "Communes")" style="height: 37px" class="btn btn-mid btn-success">Thêm mới tuyến xã</a>
                        @using (Html.BeginForm("Index", "Communes", FormMethod.Get, new
                        {
                            @class = "w-50"
                        }))
                        {
                            <div class="input-group mb-3 w-50 ml-5">
                                <button type="submit" class="input-group-text btn-search input-group-prepend px-2" id="basic-addon1">
                                    <i class="feather icon-search"></i>
                                </button>
                                @Html.TextBox("search", null, new
                                {
                                    @class = "form-control",
                                    placeholder = "Tìm kiếm",
                                    id = "search"
                                })
                            </div>
                        }
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li>
                                    <i class="feather icon-maximize full-card"></i>
                                </li>
                                <li>
                                    <i class="feather icon-minus minimize-card"></i>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table id="listData" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Thứ tự</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th>Hình ảnh</th>
                                    <th width="150">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CommuneViewModel item in result.Items)
                                {
                                    <tr>
                                        <td width="60" class="text-center">@(counter++) </td>
                                        <td>
                                            <strong>@item.Name</strong> <br />
                                            <i>@item.Address</i>
                                        </td>
                                        <td>
                                            @item.ShortContent
                                        </td>
                                        <td>
                                            <img src="@(!item.Image.IsNullOrWhiteSpace() ? string.Format("{0}{1}", Constants.PATH_IMAGE_COMMUNE, item.Image) : "/Content/images/noavatar.gif")" class="avater-image" height="60" />
                                        </td>
                                        <td align="center">
                                            <div class="btn-group  " role="group" data-toggle="tooltip" data-placement="top" title="" data-original-title=".btn-xlg">

                                                @using (Html.BeginForm("Delete", "Communes",
                                                    new { id = item.CommuneID },
                                                    FormMethod.Post,
                                                    new { id = item.CommuneID })
                                                )
                                                {
                                                    @Html.HttpMethodOverride(HttpVerbs.Delete){
                                                        @Html.ActionLink("Sửa", "Detail", "Communes", new { id = item.CommuneID }, new { @class = "btn btn-primary btn-sm waves-effect waves-light" })
                                                        <input class="btn btn-primary btn-sm waves-effect waves-light" type="submit" value="Xóa" onclick="return confirm('Bạn chắc chắn có muốn xóa!');" />
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            @if (result.TotalCount == 0)
                            {
                                <tfoot>
                                    <tr class="footable-paging footable">
                                        <td colspan="8" class="text-center">
                                            Không có dữ liệu
                                        </td>
                                    </tr>
                                </tfoot>
                            }
                            @if (result.TotalCount > 0)
                            {
                                var currentPage = result.PageIndex;
                                var totalPage = result.TotalPages;

                                <tfoot>
                                    <tr class="footable-paging footable">
                                        <td colspan="8">
                                            <div class="d-flex align-items-center">
                                                <span class="pr-2">Số dòng/trang</span>
                                                @using (Html.BeginForm("Index", "Communes", FormMethod.Get, new { id = "changePageSize" }))
                                                {
                                                    @Html.DropDownList("pageSize",
                                                        new List<SelectListItem> {
                                                            new SelectListItem { Value = "10" , Text = "10" },
                                                            new SelectListItem { Value = "25" , Text = "25" },
                                                            new SelectListItem { Value = "50" , Text = "50" },
                                                            new SelectListItem { Value = "100" , Text = "100" }
                                                        }, new
                                                        {
                                                            onchange = "submitChange()",
                                                                 @class = "form-control form-control-primary"
                                                        })
                                                }
                                            </div>
                                            <div class="text-center">
                                                <ul class="pagination mb-2">
                                                    <li class="footable-page-nav" data-page="first">
                                                        <button class="footable-page-link" disabled="@(!result.HasPreviousPage)" onclick="location.href = '@Url.Action("Index", "Communes", new { page = 1, pageSize=Request.Params["pageSize"] })'">
                                                            «
                                                        </button>
                                                    </li>
                                                    <li class="footable-page-nav" data-page="first">
                                                        <button class="footable-page-link" disabled="@(!result.HasPreviousPage)" onclick="location.href = '@Url.Action("Index", "Communes", new { page = currentPage, pageSize=Request.Params["pageSize"] })'">
                                                            ‹
                                                        </button>
                                                    </li>
                                                    @for (var i = currentPage - 4; i < totalPage && i < currentPage + 5; i++)
                                                    {
                                                        if (i >= 0)
                                                        {
                                                            if ((currentPage <= 2 && i < 5) || (currentPage > 2 && (i >= currentPage - 2 || i >= totalPage - 5) && i <= currentPage + 2))
                                                            {
                                                                <li class="footable-page visible @(i == currentPage ? "active": "")">
                                                                    @Html.ActionLink((i + 1).ToString(), "Index", "Communes", new { page = i + 1, pageSize = Request.Params["pageSize"] }, new { @class = "btn btn-sm footable-page-link" })
                                                                </li>
                                                            }

                                                        }

                                                    }
                                                    <li class="footable-page-nav" data-page="first">
                                                        <button class="footable-page-link" disabled="@(!result.HasPreviousPage)" onclick="location.href = '@Url.Action("Index", "Communes", new { page = currentPage + 2, pageSize=Request.Params["pageSize"] })'">
                                                            ›
                                                        </button>
                                                    </li>
                                                    <li class="footable-page-nav" data-page="first">
                                                        <button class="footable-page-link" disabled="@(!result.HasPreviousPage)" onclick="location.href = '@Url.Action("Index", "Communes", new { page = totalPage, pageSize=Request.Params["pageSize"] })'">
                                                            »
                                                        </button>
                                                    </li>
                                                </ul>
                                                <div class="divider"></div><span class="label label-default">@(result.PageIndex + 1) of @result.TotalPages</span>
                                            </div>

                                        </td>
                                    </tr>
                                </tfoot>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <!-- Zero config.table end -->
        </div>
    </div>
</div>
<!-- Page-body end -->
@section scripts {
    <script type="text/javascript" src="~/Content/ckfinder/ckfinder.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2.full.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2-custom.js"></script>
    @if (isSuccess != null)
    {
        if (isSuccess)
        {
            <script>
                toastr.success('@Message', 'Thành công');
            </script>
        }
        else
        {
            <script>
                toastr.error('@Message', 'Thất bại',{timeOut: 8000});
            </script>
        }
    }
    <script type="text/javascript">
        function submitChange(value) {
            $('#changePageSize').submit();
        }
    </script>
}