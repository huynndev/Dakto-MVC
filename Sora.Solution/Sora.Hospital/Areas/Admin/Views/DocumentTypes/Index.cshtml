@using Sora.Services.ViewModels
@using Sora.Common.Enums
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSimpleAdmin.cshtml";
    var models = (List<DocumentTypeViewModel>)Model;
    var counter = 1;

    var isSuccess = ViewBag.Success;
    var Message = ViewBag.Message;
}
@section css{
    <link href="~/Content/Adminty/assets/toastr/css/toastr.css" rel="stylesheet" />
}
<!-- Page-header start -->
<div class="page-header horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Quản lý loại văn bản</h4>
                    <span>Danh sách văn bản. Bạn có thể sửa, thêm mới và xóa</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="~/Admin">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","DocumentTypes")">Loại văn bản</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Danh sách</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Zero config.table start -->
            <div class="card">
                <div class="card-header">
                    <h5>Danh sách </h5>
                    <a href="@Url.Action("Create", "DocumentTypes")" class="btn btn-mid btn-success">Thêm mới loại văn bản</a>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="feather icon-maximize full-card"></i></li>
                            <li><i class="feather icon-minus minimize-card"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table id="listData" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th width="100">Thứ tự</th>
                                    <th style="width: 30%">Loại văn bản</th>
                                    <th>Mô tả</th>
                                    <th width="150">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DocumentTypeViewModel item in models)
                                {
                                    <tr>
                                        <td>@(counter++) </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                        </td>
                                        <td>
                                            @Html.Raw(item.Description)
                                        </td>
                                        <td align="center">
                                            <div class="btn-group  " role="group" data-toggle="tooltip" data-placement="top" title="" data-original-title=".btn-xlg">

                                                @using (Html.BeginForm("Delete", "DocumentTypes",
                                                    new { id = item.DocumentTypeID },
                                                    FormMethod.Post,
                                                    new { id = item.DocumentTypeID })
                                                )
                                                {
                                                    @Html.HttpMethodOverride(HttpVerbs.Delete){
                                                        @Html.ActionLink("Sửa", "Detail", "DocumentTypes", new { id = item.DocumentTypeID }, new { @class = "btn btn-primary btn-sm waves-effect waves-light" })
                                                        <input class="btn btn-primary btn-sm waves-effect waves-light" type="submit" value="Xóa" onclick="return confirm('Bạn chắc chắn có muốn xóa!');" />
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            <!-- Zero config.table end -->
        </div>
    </div>
</div>
<!-- Page-body end -->
@section scripts {
    <script src="~/Content/Adminty/assets/toastr/js/toastr.js"></script>

    @if (isSuccess != null)
    {
        if (isSuccess)
        {
            <script>
                toastr.success('@Message', 'Thành công');
            </script>
        }
        else
        {
            <script>
                toastr.error('@Message', 'Thất bại',{timeOut: 8000});
            </script>
        }
    }
}
