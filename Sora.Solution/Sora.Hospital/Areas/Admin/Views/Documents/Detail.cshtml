@using Sora.Common.CommonObjects
@using Sora.Common.Constants
@using Sora.Common.Extensions
@using Sora.Services.ViewModels
@model Sora.Services.ViewModels.DocumentViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutSimpleAdmin.cshtml";
    var types = (List<DocumentTypeViewModel>)ViewData["Types"];
    var isSuccess = ViewBag.Success;
    var Message = ViewBag.Message;
}
@section css{
    <link href="~/Content/assets/css/select2.min.css" rel="stylesheet" />
    <style>
        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: #01a9ac !important;
            border: 1px solid #01a9ac !important;
            padding: 5px 15px !important;
        }

        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            background-color: #01a9ac !important;
        }

        .box-img-avatar {
            position: relative;
            overflow: hidden;
            width: 230px;
            height: 270px;
            max-width: 100%;
            max-height: 100%;
            margin-bottom: -15px;
            border: 1px solid #bfbfbf;
        }

        .img-avatar {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .lable-input {
            position: absolute;
            background: #0000004f;
            width: 100%;
            left: 0;
            bottom: 0;
            margin-bottom: 0;
            height: 30%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #00ffe1;
            cursor: pointer;
        }
        #lb-input-file{
            height: 35px;
            margin-bottom: 0;
            padding: 8px 15px;
        }
    </style>
}
<!-- Page-header start -->
<div class="page-header horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Cập nhập văn bản</h4>
                    <span>Thêm mới / Sửa thông tin</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="~/Admin">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Doctors")">Văn bản</a>

                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Cập nhập</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Zero config.table start -->
            @using (Html.BeginForm("Save", "Documents", FormMethod.Post, new { @id = "formData", @class = "form-validate form-page", enctype = "multipart/form-data" }))
            {
                <div class="card">
                    <div class="card-header">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#category1" role="tab">Tiếng Việt</a>
                                <div class="slide"></div>
                            </li>
                        </ul>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="feather icon-maximize full-card"></i></li>
                                <li><i class="feather minimize-card icon-minus"></i></li>
                            </ul>
                        </div>
                    </div>

                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.DocumentID)
                    @Html.HiddenFor(model => model.File)
                    <div class="card-block">
                        <div class="row">
                            <div class="col-lg-12 ">
                                <!-- Tab panes -->
                                <div class="tab-content card-block">
                                    <div class="tab-pane active" id="category1" role="tabpanel">
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Số/Ký hiệu</label>
                                                    @Html.TextBoxFor(model => model.DocumentNo, new { @class = "form-control", placeholder = "Số/Ký hiệu", autocomplete = "off", maxlength = 50 })
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Tài liệu</label> <br />
                                                    <input type="file" name="file" id="input-file" value="" class="d-none" onchange="SetImagePreview(this)" />
                                                    <label class="show-file-name mr-2">
                                                        @if (Model.File != null)
                                                        {
                                                            <a href="/api/document/download-file?fileName=@Model.File"><i class="feather icon-download"></i> @Model.File</a>
                                                        }
                                                    </label>
                                                    <label id="lb-input-file" for="input-file" class="btn btn-primary">Tải file lên</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Loại văn bản</label>
                                                    @Html.DropDownListFor(model => model.FK_DocumentTypeID,
                                                   types.Select(x => new SelectListItem { Text = x.Name, Value = x.DocumentTypeID.ToString() }),
                                                   "Chọn loại văn bản",
                                                   new { @class = "form-control", required = "required" })
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Ngày ban hành</label>
                                                    @Html.TextBoxFor(model => model.DocumentDate, "{0:yyyy-MM-dd}", new { @class = "form-control ", @type = "date" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Người ký</label>
                                                    @Html.TextBoxFor(model => model.Signner, new { @class = "form-control", placeholder = "Người ký", autocomplete = "off", maxlength = 50 })
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label>Cơ quan ban hành</label>
                                                    @Html.TextBoxFor(model => model.IssueBy, new { @class = "form-control", placeholder = "Cơ quan ban hành", autocomplete = "off", maxlength = 50 })
                                                </div>
                                            </div>
                                        </div>
                                        <div class=" col-12">
                                            <div class="form-group">
                                                <label>Trích yếu</label>
                                                @Html.TextAreaFor(model => model.Content, new { @class = "form-control ", placeholder = "Trích yếu", autocomplete = "off", rows = 3, maxlength = 1000, required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-12 align-center">
                                <div class="form-group" style="margin: auto;padding: 13px;">
                                    <span style="float:right">
                                        <button type="submit" class="btn btn-space btn-primary ">Lưu</button>
                                        @Html.ActionLink("Trở lại", "Index", "Documents", new { @class = "btn btn-space btn-default" })
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- Zero config.table end -->
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
    <script src="~/Content/ckeditor/adapters/jquery.js"></script>
    <script type="text/javascript" src="~/Content/ckfinder/ckfinder.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2.full.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/select2-custom.js"></script>
    @if (isSuccess != null)
    {
        if (isSuccess)
        {
            <script>
                toastr.success('@Message', 'Thành công');
            </script>
        }
        else
        {
            <script>
                toastr.error('@Message', 'Thất bại',{timeOut: 8000});
            </script>
        }
    }
    <script type="text/javascript">
        $(function () {
            var $form = $("#formData");
            $(".editor")
                .ckeditor();

            //CKFinder.setupCKEditor(null, "/Uploads");
        });

        function SetImagePreview(input, picId) {
            if (input.files && input.files[0]) {
                var name = input.files[0].name;
                $('.show-file-name').html(name);
            }
        }
    </script>
}

