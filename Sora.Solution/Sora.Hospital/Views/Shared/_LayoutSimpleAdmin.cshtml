    </div>
    <![endif]-->
    <!-- Warning Section Ends -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/SimpleAdminScript")
    @Scripts.Render("~/Content/SimpleAdminDatatableScript")
    <script src="~/Content/assets/lib/multiselect/js/jquery.multi-select.js"></script>
    <script src="~/Content/assets/lib/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
    <script src="~/Content/Adminty/assets/toastr/js/toastr.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $("#@activeMenu").addClass("active");
        $("#@activeMenu").closest(".pcoded-hasmenu").addClass("pcoded-trigger");
    </script>
</body>
</html>

